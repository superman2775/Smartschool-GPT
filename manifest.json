{
  "manifest_version": 3,
  "name": "Smartschool AI Assistent",
  "version": "1.1.0",
  "description": "AI-assistent voor Smartschool met 10 gratis & betaalde providers.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.groq.com/*",
    "https://api.mistral.ai/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://api.deepseek.com/*",
    "https://api.together.xyz/*",
    "https://api.perplexity.ai/*",
    "https://api.x.ai/*",
    "https://llm-api.readme.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.smartschool.be/*"],
      "exclude_matches": ["*://*.smartschool.be/login", "*://www.smartschool.be/"],
      "js": ["smppdetect.js",
            "main.js"],
      "run_at": "document_idle"
    }
  ]
}
